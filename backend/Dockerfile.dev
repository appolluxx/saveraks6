# backend/Dockerfile.dev (Development)
FROM node:20-alpine

WORKDIR /app

# Install dependencies for development
RUN apk add --no-cache curl openssl

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/
RUN npx prisma generate

# Copy source
COPY . .

EXPOSE 3000 9229

CMD ["npm", "run", "dev"]

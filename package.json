{
  "name": "saveraks2",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "infra": "docker-compose up -d postgres redis minio",
    "backend": "npm run dev --prefix backend",
    "frontend": "npm run dev --prefix frontend",
    "dev": "docker-compose up -d postgres redis minio && concurrently \"npm run backend\" \"npm run frontend\"",
    "prisma:generate": "npm run prisma:generate --prefix backend",
    "prisma:migrate": "npm run prisma:migrate --prefix backend",
    "build": "npm run build --prefix frontend && mkdir -p dist && cp -r frontend/dist/* ./dist/",
    "install-all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "deploy": "./deploy.bat",
    "deploy:unix": "./deploy.sh"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@prisma/client": "^7.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "bcrypt": "^6.0.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}